@{
    ViewData["Title"] = "Chat";
}

<div id="username-container">
    <h2>Enter your name</h2>
    <input type="text" id="username-input" />
    <button id="join-button">Join Chat</button>
</div>

<div id="chat-container" style="display: none;">
    <div id="users-container">
        <h2>Users</h2>
        <ul id="users-list"></ul>
    </div>
    <div id="messages-container">
        <h2>Messages</h2>
        <ul id="messages-list"></ul>
        <div id="message-input-container">
            <input type="text" id="message-input" placeholder="Type your message..." />
            <button id="send-button">Send</button>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/signalr.js"></script>
    <script src="~/js/chat.js"></script>
}
<style>
    body {
        background-color: #f4f4f4;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        max-width: 900px;
        margin: auto;
        padding-top: 20px;
    }

    #username-container {
        text-align: center;
        margin-top: 100px;
        background-color: #fff;
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    #chat-container {
        display: flex;
        margin-top: 20px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        overflow: hidden;
        height: 600px;
    }

    #users-container {
        width: 250px;
        border-right: 1px solid #eee;
        padding: 20px;
        background-color: #f9f9f9;
    }

    #messages-container {
        flex: 1;
        padding: 20px;
        display: flex;
        flex-direction: column;
    }

    #messages-list {
        list-style-type: none;
        padding: 0;
        margin: 0;
        overflow-y: auto;
        flex-grow: 1;
        border: 1px solid #eee;
        padding: 10px;
        border-radius: 5px;
    }

    .private-message {
        font-style: italic;
        color: #666;
        background-color: #f0f0f0;
    }

    #message-input-container {
        margin-top: 10px;
        display: flex;
    }

    #message-input {
        flex-grow: 1;
        border: 1px solid #ccc;
        padding: 10px;
        border-radius: 5px 0 0 5px;
    }

    #send-button {
        padding: 10px 20px;
        border: 1px solid #ccc;
        border-left: none;
        background-color: #007bff;
        color: white;
        cursor: pointer;
        border-radius: 0 5px 5px 0;
    }

        #send-button:hover {
            background-color: #0056b3;
        }

    #users-list li {
        cursor: pointer;
        padding: 10px;
        border-bottom: 1px solid #eee;
    }

        #users-list li:hover {
            background-color: #e9e9e9;
        }

    .private-chat-window {
        position: fixed;
        bottom: 0;
        right: 20px;
        width: 300px;
        border: 1px solid #ccc;
        background-color: white;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        border-radius: 5px 5px 0 0;
        display: block;
    }

    .private-chat-header {
        background-color: #007bff;
        color: white;
        padding: 10px;
        border-radius: 5px 5px 0 0;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .close-private-chat {
        background: none;
        border: none;
        color: white;
        font-size: 20px;
        cursor: pointer;
    }

    .private-messages-list {
        list-style-type: none;
        padding: 10px;
        margin: 0;
        overflow-y: auto;
        height: 200px;
    }

    .private-message-input-container {
        display: flex;
        border-top: 1px solid #eee;
    }

    .private-message-input {
        flex-grow: 1;
        border: none;
        padding: 10px;
    }

    .send-private-message {
        background-color: #007bff;
        color: white;
        border: none;
        padding: 10px 15px;
        cursor: pointer;
    }
</style>
